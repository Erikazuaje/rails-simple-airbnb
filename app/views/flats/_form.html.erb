<%= simple_form_for @flat, html: { class: "mt-4" } do |f| %>
  <%= f.input :name, label: "Name", class: "form-control" %>
  <%= f.input :address, label: "Address", class: "form-control" %>
  <%= f.input :description, label: "Description", class: "form-control" %>
  <%= f.input :price_per_night, label: "Price per Night", class: "form-control" %>
  <%= f.input :number_of_guests, label: "Number of Guests", class: "form-control" %>

  <%= f.submit "Save Changes", class: "btn btn-primary mt-3" %>
<% end %>
